<%- include('template/head.ejs', {titleWeb:'Page home'}) %>

    <div class="container">

        <h1>CRUD with MongoDB</h1>

        <div class="d-grid gap-2 mt-4 mb-4">
            <a href="/pets/create" class="btn btn-success">
                create new Pet
            </a>
        </div>

        <table class="table">
            <thead>
                <tr class="table-primary">
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (arrayPets.length> 0 ) { %> 
                    <% arrayPets.forEach(pet=> { %>
                        <tr>
                            <th scope="row"><%= pet.id %></th>
                            <td><%= pet.name %></td>
                            <td><%= pet.description %></td>
                            <td>Delete</td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>

    <%- include('template/footer.ejs') %>